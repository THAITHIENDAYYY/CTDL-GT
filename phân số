#include <iostream>
using namespace std;

struct Fraction {
    int numerator;   // t? s?
    int denominator; // m?u s?
};

// hàm nh?p phân s?
void inputFraction(Fraction &frac) {
    cout << "Nhap tu so: ";
    cin >> frac.numerator;

    do {
        cout << "Nhap mau so (khac 0): ";
        cin >> frac.denominator;
    } while (frac.denominator == 0);
}

// hàm xu?t phân s?
void outputFraction(Fraction frac) {
    cout << frac.numerator << "/" << frac.denominator << endl;
}
